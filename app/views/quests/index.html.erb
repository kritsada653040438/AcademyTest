<div class="w-full max-w-lg mx-auto mt-12">
  <div class="bg-white rounded-lg shadow-xl p-6">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Academy Quests</h1>
    <%= link_to "My brag document", brag_document_path, class: "block text-center text-indigo-600 hover:text-indigo-800 mb-6" %>

    <div class="mb-6">
      <%= render 'form', quest: @quest %>
    </div>

    <%= turbo_frame_tag "quests" do %>
      <div id="quests-list">
        <%= render @quests %>
      </div>
    <% end %>
  </div>
</div>